@page "/"
@inject IJSRuntime JS
<div id="overviewScreen">
    <div class="overviewScreenWrapper">
        <div class="quickoverview">
            <div class="speedStatusWrapper">
                <img src="images/speed.png" />
            </div>
            <div class="options-wrapper">
                <ul class="quickoptions">
                    <IconBox iconlabel="Traction Control" iconName="traction"  IconType="checkbox" />
                    <IconBox iconlabel="Speed Limit" iconName="speedlimit"  IconType="checkbox"/>
                    <IconBox iconlabel="Trunk" iconName="tunk" IconType="checkbox" IconChecked="true"/>
                    <IconBox iconlabel="Frunk" iconName="frunk"  IconType="checkbox"/>
                    <IconBox iconlabel="Neutral" iconName="neutral" IconType="checkbox" IconChecked="true"/>
                    <IconBox iconlabel="Fold Mirrors" iconName="Unfold Mirrors"  IconType="checkbox"/>
                </ul>
            </div>
        </div>
        <div class="NavigationWrapper">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d82273.67190332264!2d10.85034582498655!3d49.879045405207826!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47a223b3d3689619%3A0x8fb74ede3737d29d!2sBROSE%20ARENA%20(BAB%20Bamberg%20Arena%20mbH)!5e0!3m2!1sen!2sde!4v1658850754438!5m2!1sen!2sde"
                width="100%" height="350px" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="weatherWrapper">
            <img src="images/weather.png" />
        </div>
        <div class="entertainmentWrapper">
            <img src="images/music.png" />
        </div>
        <div class="quickControlsWrapper">
            <h3 class="controls-heading">Quick controls</h3>
            <QuickControls />
        </div>
    </div>
</div>
@code {
    private bool showinit = false;
    protected override bool ShouldRender()
    {
        showinit = true;
        showInitialScreen();

        return false;
    }
    public async Task showInitialScreen()
    {
        await JS.InvokeVoidAsync("showInitialScreen");

    }
}